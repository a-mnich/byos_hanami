<li class="device" hx-ext="remove">
  <form action="/devices" method="post" class="pico form">
    <fieldset role="group">
      <input name="device[label]" placeholder="Label" autocomplete="label">
      <input name="device[mac_address]" placeholder="MAC Address" autocomplete="mac">
      <input name="device[refresh_rate]" placeholder="Refresh Rate" autocomplete="refresh_rate">

      <input type="submit"
             value="Save"
             hx-post="/devices"
             hx-trigger="click"
             hx-target="closest .device"
             hx-swap="outerHTML swap:0s">

      <input type="button" value="Cancel" data-remove="true">

    </fieldset>

    <% if errors.any? %>
      <ul class="form-errors">
        <% errors.each do |attribute, message| %>
          <li><%= "#{attribute} #{message.first}" %></li>
        <% end %>
      </ul>
    <% end %>
  </form>
</li>
